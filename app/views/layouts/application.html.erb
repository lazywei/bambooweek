<!DOCTYPE html>
<html>
  <head>
    <title>竹塹週預購網站</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="">
    <%= yield :header %>
    <%= stylesheet_link_tag    "application", :media => "all" %>

    <%#= javascript_include_tag "templates/admin_panel" %>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="../assets/ico/favicon.png">
    <%= csrf_meta_tags %>
  </head>
  <body id="<%= "%s_%s" % [controller_name, action_name] %>" class="<%= controller_name %> <%= action_name %>">

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li>
              <%= link_to "/" do %>
                台大竹塹週
              <% end %>
              </li>
              <li>
              <%= link_to page_path('notice') do %>
                預購須知
              <% end %>
              </li>
              <li>
              <%= link_to "https://www.facebook.com/EatMe2013BambooWeek", target: :_blank do %>
                聯絡我們
              <% end %>
              </li>
              <li>
                <div class="fb-like" data-href="http://week.ntubamboo.com/" data-send="true" data-layout="button_count" data-width="450" data-show-faces="false" data-font="arial" style="margin: 12px;"></div>
              </li>
            </ul>
            <ul class="nav pull-right">
              <li>
              <%= link_to cart_path do %>
                查看購物車
              <% end %>
              </li>
              <li>
              <%= link_to order_path do %>
                訂單查詢
              <% end %>
              </li>
            </ul>
            <ul class="nav">
              <li class="dropdown">

              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="span12">
          <%= yield %>
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
      <script type="text/javascript"><!--
        google_ad_client = "ca-pub-0529325452859575";
        /* bambooweek */
        google_ad_slot = "2524337728";
        google_ad_width = 728;
        google_ad_height = 90;
        //-->
      </script>
      <script type="text/javascript"
        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
      </script>
      <p>&copy; </p>
      </footer>

    </div><!--/.fluid-container-->
    <%= javascript_include_tag "application" %>
    <%= yield :javascript %>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/zh_TW/all.js#xfbml=1&appId=225830524119019";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
  </body>
</html>
