<div class="page-header">
  <h1>購物車</h1>
</div>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>名稱</th>
    <th>數量</th>
    <th></th>
  </tr>

<% @cart.each do |id, info| %>
  <tr>
    <td><%= info[:name] %></td>
    <td><%= info[:count] %></td>
    <td><%= link_to '編輯', '' %></td>
    <td><%= button_to '刪除', remove_from_cart_path(:item_id => id), :class => 'btn btn-danger btn-mini' %></td>
  </tr>
<% end %>
</table>

