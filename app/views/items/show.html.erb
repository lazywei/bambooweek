<div class="row">
  <div class="span4">
    <p><%= image_tag(@item.picture_url(:medium)) if @item.picture? %></p>
  </div>
  <div class="span8 text-center">
    <%= form_tag add_into_cart_item_path(@item), :method => :post, :class => 'form-inline' do %>
      <span style="margin-right: 10px"> <%= label_tag 'count', '數量' %> </span>
      <span style="margin-right: 10px"> <%= number_field_tag 'count', 1, :class => 'input-mini' %> </span>
        <%= submit_tag '加入購物車', :class => 'btn btn-action' %>
    <% end %>
    <p><%= simple_format @item.description %></p>
  </div>
</div>
