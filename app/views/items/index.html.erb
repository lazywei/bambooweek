<%= paginate @items %>
<div class="well span12 text-center">
  <ul class="thumbnails">
    <% @items.each do |item| %>
      <li class="span4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= item.name %></h3>
          <p><%= image_tag(item.picture_url(:medium)) if item.picture? %></p>
          <p><%= link_to '查看', item_path(item), class: 'btn btn-primary', style: 'float: bottom' %></p>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
</div>
