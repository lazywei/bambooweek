<div class="page-header text-center">
  <span class="pull-right">
    2013/5/5, 24:00預購截止
  </span>
  <h1>
    2013台大竹塹週 快來吃我吧
  </h1>
</div>
<div class="well span12 text-center">
  <h1>
    <%= flash[:notice] %>
  </h1>
  <ul class="thumbnails">
    <% @items.each do |item| %>
      <li class="span4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= item.name %></h3>
          <p><%= image_tag(item.picture_url(:medium)) if item.picture? %></p>
          <p><%= link_to '查看', item_path(item), class: 'btn btn-primary', style: 'float: bottom' %></p>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @items %>
</div>
